@model IEnumerable<prescriptionq>
@{
    
    Layout = "_Layout";
    ViewData["Title"] = "Paymentq";
}
<link rel="stylesheet" href="@Url.Content("~/assets/bootstrap/css/bootstrap.min.css")" />
<div id="wrapper">
    <div class="d-flex flex-column" id="content-wrapper">
        <div id="content">
            <div class="container-fluid" style="padding-top: 50px;">
                <div class="modal fade" role="dialog" tabindex="-1" id="modal-1">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add amount here</h4><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                            </div>
                            <form asp-controller="PaymentqController" asp-action="addPaymentData">
                                <input type="text" value="bill" name="doc" style="display:none" />
                                <div class="modal-body">
                                    <input type="text" name="pid" placeholder="patient ID" />
                                    <textarea id="textarea" rows="4" cols="50" name="value"></textarea>
                                </div>
                                <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal">Close</button>
                                    <button class="btn btn-primary" type="submit">Save</button></div>
                           </form>
                            
                        </div>
                    </div>
                </div>
                <div class="card shadow">
                    <div class="card-header py-3">
                        <p class="text-primary m-0 fw-bold">Payment Queue</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <!--<th>Payment ID</th>-->
                                        <th>Patient ID</th>
                                        <th>Token No</th>
                                        <th>Patient Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <tbody>

                                        @foreach (var payq in Model)
                                        {
                                            
                                        <tr>
                                           
                                            <td>@payq.patient_id</td>
                                            <td>@payq.token</td>
                                            <td>@payq.date</td>
                                            <td><button class="btn btn-primary" type="button" data-bs-target="#modal-1" data-bs-toggle="modal"><a asp-controller="BillFileHandle" asp-acton="Index" asp-route-pqid="@payq.id">Proceed</a></button></td>
                                        
                                        
                                        </tr>
                                        }



                                </tbody>
                                    <!--tr>
                                        <td>Cell 1</td>
                                        <td>Cell 2</td>
                                        <td>Cell 1</td>
                                        <td>Cell 4</td>
                                        <td><button class="btn btn-primary" type="button" data-bs-target="#modal-1" data-bs-toggle="modal">Proceed</button></td>
                                    </tr>
                                    <tr>
                                        <td>Cell 3</td>
                                        <td>Cell 4</td>
                                        <td>Cell 3</td>
                                        <td>Cell 4</td>
                                        <td><button class="btn btn-primary" type="button" data-bs-target="#modal-1" data-bs-toggle="modal">Proceed</button></td>
                                    </tr-->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="bg-white sticky-footer" style="width: 808px;">
            <div class="container my-auto">
                <div class="text-center my-auto copyright"></div>
            </div>
        </footer>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="assets/js/theme.js"></script>

